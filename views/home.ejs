<%- include ("partials/header") -%>

<div class="s02">
    <form action="/register" method="post">
        <fieldset>
            <legend>New user ? <br>Sign up below</legend>
        </fieldset>
        <div class="register-form">
            <div class="input-field">
                <input id="reg-username" type="text" name="username" placeholder="User Name"></input>
            </div>
            <div class="input-field">
                   <input id="reg-password" type="password" name="password" placeholder="Password"></input>
            </div>
            
            <div class="input-field">
                <input id="reg-re-password" type="password" name="reg_re_password" placeholder="Confirm Password"></input>
            </div>
            <span id="message" style="color:white;"></span>
            <div class="input-field third-wrap">
                <button class="btn-search reg-button" name="submit" type="submit" disabled>Register</button>
            </div>
        </div>
    </form>
    <div class="panel-divider">
        <h2>OR</h2>
    </div>
    <form action="/login" method="post">
        <fieldset>
            <legend>Existing user? <br>Login</legend>
        </fieldset>
        <div class="login-form">
            <div class="input-field">
                <input id="log-username" type="text" name="username" placeholder="User Name"></input>
            </div>
            <div class="input-field">
                <input id="log-password" type="password" name="password" placeholder="Password"></input>
            </div>
            <div class="input-field third-wrap">
                <button class="btn-search log-button" name="submit" type="submit">Login</button>
            </div>
        </div>
    </form>
</div>

<script src="js/formCheck.js" type="text/javascript"></script>
<%- include ("partials/footer") -%>